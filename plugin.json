{
  "id": "nodebb-plugin-lightgallery",
  "url": "https://github.com/ariastel/nodebb-plugin-lightgallery",
  "main": "./library.js",
  "hooks": [
    {
      "hook": "filter:middleware.render",
      "method": "renderLightGallery"
    }
  ],
  "scripts": [
    "script.js"
  ],
  "staticDirs": {
    "fonts": "dist/fonts",
    "img": "dist/img"
  },
  "modules": {
    "jquery.js": "dist/plugins/jquery.min.js",
    "lg-autoplay.js": "dist/plugins/lg-autoplay.min.js",
    "lg-fullscreen.js": "dist/plugins/lg-fullscreen.min.js",
    "lg-pager.js": "dist/plugins/lg-pager.min.js",
    "lg-thumbnail.js": "dist/plugins/lg-thumbnail.min.js",
    "lg-zoom.js": "dist/plugins/lg-zoom.min.js",
    "lightgallery.js": "dist/js/lightgallery.min.js"
  },
  "css": [
    "dist/css/lightgallery.min.css"
  ]
}